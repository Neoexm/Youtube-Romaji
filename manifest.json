{
  "manifest_version": 3,
  "name": "YouTube Romaji + Custom Subtitles",
  "version": "1.0.0",
  "description": "Adds Romaji option to YouTube subtitles and supports per-video custom subtitle uploads.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "https://m.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://m.youtube.com/*"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "page-bridge.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
